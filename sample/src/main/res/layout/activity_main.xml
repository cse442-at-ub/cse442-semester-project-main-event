<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="81dp"
        android:layout_height="682dp"
        android:background="#03DDEC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.979" />

    <Button
        android:id="@+id/PromotedButton"
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:text="@string/PromotedButton"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileButton" />

    <Button
        android:id="@+id/EventFinderButton"
        android:layout_width="89dp"
        android:layout_height="69dp"
        android:layout_marginTop="28dp"
        android:text="Event Finder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PromotedButton" />

    <Button
        android:id="@+id/CalendarButton"
        android:layout_width="84dp"
        android:layout_height="72dp"
        android:layout_marginTop="28dp"
        android:text="Calendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EventFinderButton" />

    <Button
        android:id="@+id/register_event_button"
        android:layout_width="92dp"
        android:layout_height="75dp"
        android:text="Register Event"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CalendarButton"
        app:layout_constraintVertical_bias="0.135" />

    <Button
        android:id="@+id/RegisterPageButton"
        android:layout_width="180dp"
        android:layout_height="64dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="108dp"
        android:layout_marginRight="108dp"
        android:text="Register Account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/profileButton"
        android:layout_width="84dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:text="Profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_event_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
